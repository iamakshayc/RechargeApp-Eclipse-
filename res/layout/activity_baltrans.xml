<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Baltrans" >

    <TextView
        android:id="@+id/baltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="enter"
        android:textSize="20sp" />

    
    <EditText
        android:id="@+id/baledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/baltext"
        android:layout_below="@+id/baltext"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="phone" >

        <requestFocus />
    </EditText>
    <LinearLayout
  android:id="@+id/linear_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_alignLeft="@+id/baledit"
  android:layout_below="@+id/baledit"
  android:layout_centerInParent="true"
  >
        <Button
        android:id="@+id/balok"
        android:layout_width="0dip"
      android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Ok" />
	<Button
        android:id="@+id/balexit"
        android:layout_width="0dip"
      android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Exit" />
    
    
</LinearLayout>
    

</RelativeLayout>
